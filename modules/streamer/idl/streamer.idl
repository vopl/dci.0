
scope streamer
{
    alias Traffic = bytes;

    interface Channel
    {
        in flow:    (Traffic);
        in reset:   ();

        out flow:   (Traffic);
        out reset:  ();
    }


    interface Hub
    {
        in channel: () -> (Channel);
        in reset:   ();

        in put:     (service);
        out put:    (service);

        in get:     (iid) -> (service);
        out get:    (iid) -> (service);

        in join:    (Channel);
    }

}
